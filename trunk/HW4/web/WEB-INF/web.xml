<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>nbadDB.AdminStartStopDB</listener-class>
    </listener>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>stockmart.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>stockmart.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Categories</servlet-name>
        <servlet-class>stockmart.Categories</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Energy</servlet-name>
        <servlet-class>stockmart.Energy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Healthcare</servlet-name>
        <servlet-class>stockmart.Healthcare</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Transportation</servlet-name>
        <servlet-class>stockmart.Transportation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionDetails</servlet-name>
        <servlet-class>stockmart.TransactionDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionConfirm</servlet-name>
        <servlet-class>stockmart.TransactionConfirm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Categories</servlet-name>
        <url-pattern>/Categories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Energy</servlet-name>
        <url-pattern>/Energy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Healthcare</servlet-name>
        <url-pattern>/Healthcare</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Transportation</servlet-name>
        <url-pattern>/Transportation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransactionDetails</servlet-name>
        <url-pattern>/TransactionDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransactionConfirm</servlet-name>
        <url-pattern>/TransactionConfirm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
        </welcome-file-list>
    </web-app>
